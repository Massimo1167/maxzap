{
  "workflows": [
    {
      "id": "aruba-imap",
      "trigger": {
        "type": "imap_poll",
        "host": "in.postassl.it",
        "port": 993,
        "username": "${IMAP_EMAIL_01}",
        "password": "${IMAP_PASSWORD_01}",
        "search": "UNSEEN"
      },
      "actions": [
        {
          "type": "imap_archive",
          "params": {
            "host": "in.postassl.it",
            "port": 993,
            "username": "${IMAP_EMAIL_01}",
            "password": "${IMAP_PASSWORD_01}",
            "local_dir": "../IMAP/email_attachments"
          }
        },
        {
          "type": "excel_append",
          "params": {
            "file": "../IMAP/emails.xlsx",
            "fields": [
              "datetime",
              "sender",
              "subject",
              "summary",
              "attachments",
              "storage_path"
            ]
          }
        }
      ]
    }
  ]
}
