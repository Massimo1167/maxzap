{
  "workflows": [
    {
      "id": "aruba-imap",
      "trigger": {
        "type": "imap_poll",
		"max_results": 1000,
        "host": "in.postassl.it",
        "port": 993,
        "username": "${IMAP_EMAIL_PURCHASE}",
        "password": "${IMAP_PASSWORD_PURCHASE}",
        "search": "SINCE 1-May-2025",
		    "has_attachment": true
		
      },
      "actions": [
        {
          "type": "imap_archive",
          "params": {
            "host": "in.postassl.it",
            "port": 993,
            "username": "${IMAP_EMAIL_PURCHASE}",
            "password": "${IMAP_PASSWORD_PURCHASE}",
            "local_dir": "../IMAP/purchase.order/email_attachments"
          }
        },
        {
          "type": "excel_append",
          "params": {
            "file": "../IMAP/purchase.order/emails.xlsx",
            "fields": [
              "datetime",
              "sender",
              "subject",
              "summary",
              "attachments",
              "storage_path"
            ]
          }
        }
      ]
    }
  ]
}
